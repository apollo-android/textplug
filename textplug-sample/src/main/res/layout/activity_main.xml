<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/transformation_data_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transformation Data Properties"
            android:layout_below="@id/edit_text"
            android:layout_marginBottom="30dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/removed_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RemovedPart : "
            android:layout_below="@id/transformation_data_properties"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/removed_part_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/removed_part"
            android:layout_alignTop="@id/removed_part"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/new_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewPart : "
            android:layout_below="@id/removed_part"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/new_part_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/new_part"
            android:layout_alignTop="@id/new_part"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/previous_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreviousText : "
            android:layout_below="@id/new_part"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:id="@+id/previous_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/previous_text"
            android:layout_alignTop="@id/previous_text"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/new_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewText : "
            android:layout_below="@id/previous_text"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/new_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/new_text"
            android:layout_alignTop="@id/new_text"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/previous_cursor_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreviousCursorPosition : "
            android:layout_below="@id/new_text"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/previous_cursor_position_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/previous_cursor_position"
            android:layout_alignTop="@id/previous_cursor_position"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/new_cursor_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewCursorPosition : "
            android:layout_below="@id/previous_cursor_position"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/new_cursor_position_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/new_cursor_position"
            android:layout_alignTop="@id/new_cursor_position"
            android:textColor="@color/colorPrimary"/>

        <CheckedTextView
            android:id="@+id/inserting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_cursor_position"
            android:text="Inserting"
            android:gravity="center_vertical"
            android:inputType="none"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:textColor="@color/colorAccent"/>

        <CheckedTextView
            android:id="@+id/removing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inserting"
            android:text="Removing"
            android:gravity="center_vertical"
            android:inputType="none"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:textColor="@color/colorAccent"/>

        <CheckedTextView
            android:id="@+id/inserting_removing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/removing"
            android:text="Inserting and Removing"
            android:gravity="center_vertical"
            android:inputType="none"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
</ScrollView>